<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:background="@color/white"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkbox_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:checked="false"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        />

    <CheckBox
        android:id="@+id/checkbox_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognition Dots"
        android:checked="true"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        />

    <CheckBox
        android:id="@+id/checkbox_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale Controller"
        android:checked="false"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        />


    <CheckBox
        android:id="@+id/checkbox_draggable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation Controller"
        android:checked="false"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        />


    <Button
        android:id="@+id/dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        />
</LinearLayout>